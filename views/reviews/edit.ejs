<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<h2>Edit Review</h2>
    <form action="/destinations/<%= destination._id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
      <label>
        Title:
        <input type="text" name="title" value="<%= review.title %>">
      </label>
      <label>
        Date Visited:
        <input type="month" name="dateVisited">
      </label>
      <label>
        Recommend:
        <input
          type="checkbox"
          name="recommend"
          <%= review.recommend ? 'checked' : '' %>
        >
      </label>
      <label>
        Review:
        <textarea name="review" value="<%= review.review %>"><%= review.review %></textarea>
      </label>
      <label>
        Rating:
        <select name="rating">
          <option value="<%= review.rating %> "><%= review.rating %> </option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </label>
      <button type="submit">Update Review</button>
    </form>


    <%- include('../partials/footer') %>