  <% if (!user) { %>
    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body>
  <nav>
    <img id="destinations-logo" src="/assets/destinations-logo.png" alt="Destinations logo">
    <a 
			href="/destinations" id="nav-reviews"
			<%- title === 'Destination Reviews' ? 'class="active"' : '' %>
		>
			DESTINATION REVIEWS
		</a>
    <a 
			href="/profiles" id="nav-profiles"
			<%- title === 'Profiles' ? 'class="active"' : '' %>
		>
			PROFILES
		</a>
    
    <% if (user) { %>
      <a href="/auth/logout" class="right">
        <button type="submit">Logout</button>
      </a>
    <% } else { %>
      <div 
        id="g_id_onload"
        data-client_id="<%= googleClientID %>"
        data-login_uri="/auth/google"
        data-auto_prompt="false"
      ></div>
      <div 
        class="g_id_signin right"
        data-type="standard"
        data-size="large"
        data-theme="outline"
        data-text="sign_in_with"
        data-shape="rectangular"
        data-logo_alignment="left"
      ></div>
    <% } %>
  </nav>
